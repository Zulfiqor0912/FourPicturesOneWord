<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tvStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/bg_variants</item>
        <item name="android:textColor">#25143C</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:focusable">true</item>
        <item name="fontFamily">@raw/lilit</item>
    </style>

    <style name="tvStyle.tvAnswersStyle" >
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_answers</item>
        <item name="android:textColor">@color/textColors</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>